!!! 5
html
  head
    title
      if title && project.name
        #{title} | #{project.name}
      else if project.name
        #{project.name}
      else if title 
        #{title}
    meta(charset='utf-8')
    if docCSS
      style !{docCSS}
    if exampleCSS
      style(type='text/example') !{exampleCSS}
    if exampleJS
      script(type='text/example') !{exampleJS}
  body
    .container
      .sidebar
        a.brand(href="index.html") #{project.name}
        each links, folder in project.menu
          unless folder == './'
            strong.nav-heading #{folder}
          ul.nav
            each link in links
              li
                a(href="#{link.href}")
                  #{link.name}
      .main
        each section, i in sections
          .section(id="section-#{i + 1}")
            .docs
              a(class='pilcrow', href="#section-#{i + 1}") &#182;
              !{section.docs}
            if section.code
              .code
                pre
                  code !{section.code}
    if docJS
      script !{docJS}
